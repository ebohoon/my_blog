    <link href="/static/mystyle.css" rel="stylesheet" />
    <title>BH STUDIO</title>
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const writeId = urlParams.get("writeId");

        $(document).ready(function () {
            get_story()
            console.log(writeId)
        })

        function get_story() {
            $("#goodsList").empty()
            console.log(writeId)
            $.ajax({
                type: "GET",
                url: `/api/stories/${writeId}`,
                data: {},
                success: function (response) {
                    let write = response["story"]
                    if (write == null) {
                        alert("게시글존재하지않음")
                    } else {
                        console.log(write)
                        make_card(write)
                    }
                }
            })
        }

        function make_card(item) {
            let htmlTemp = `
            <div class="col mb-4">
                <div class="card">
                    <img src="${item["thumbnailUrl"]}" onerror="this.src='/static/bhstudio.jpg'" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">${item["title"]}</h5>
                        <p class="card-text">${item["story"]}</p>
                    </div>
                </div>
            </div>
            `
            $("#goodsList").append(htmlTemp)
        }
    </script>
</head>

<body>
